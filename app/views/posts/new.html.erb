<h1>New Post</h1>

<div class=form-container>
  <%= form_with(model: @post, url: user_posts_path(@current_user), method: :post) do |form| %>
    <div class="title">
      <%= form.label :title %>
      <%= form.text_field :title, class: "title-field" %>
    </div>

    <div class="text">
      <%= form.label :text %>
      <%= form.text_area :text, :cols => 70, :rows => 10, class: "text-field" %>
    </div>

    <div>
      <%= form.submit "Create Post", class: "submit-btn" %>
    </div>
  <% end %>
</div>
